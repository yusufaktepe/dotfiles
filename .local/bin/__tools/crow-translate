#!/bin/sh

if pidof -q crow; then
	if wmctrl -lx | grep -q "crow.crow-translate"; then
		wmctrl -x -a "crow.crow-translate" && wmctrl -c :ACTIVE:
	else
		dbus-send --type=method_call --dest=org.kde.CrowTranslate \
			/org/kde/CrowTranslate/MainWindow \
			org.kde.CrowTranslate.MainWindow.open
	fi
else
	setsid -f crow >/dev/null 2>&1
fi

