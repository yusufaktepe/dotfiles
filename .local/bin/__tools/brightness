#!/bin/sh

update_bar() {
	if pidof -q i3blocks; then
		pkill -RTMIN+10 i3blocks
	elif pidof -q polybar; then
		polybar-msg action "#brightness.hook.0" >/dev/null
	else
		return
	fi
}

case $1 in
	inc) brightnessctl set "+${2:-5}%" && update_bar ;;
	dec) brightnessctl set "${2:-5}%-" && update_bar ;;
	set) brightnessctl set "${2:-27}%" && update_bar ;;
	off)
		xset dpms force off
		KBL=/sys/class/leds/tpacpi::kbd_backlight/brightness
		[ -e "$KBL" ] && { printf 0 > $KBL; capsloff ;} ;;
esac

