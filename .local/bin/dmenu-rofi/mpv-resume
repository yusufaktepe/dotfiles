#!/bin/sh
# shellcheck disable=SC2046,SC2062

cd ~/.config/mpv/watch_later || return
[ -n "$(ls ~/.config/mpv/watch_later)" ] || return

w=$(sed -n 's/# //p' $(ls -t) | xargs -rd'\n' -I % basename % | dmenu -i -l 5 -p ÔÅã)
[ -z "$w" ] && exit
w=$(grep ./* -e "$(echo "$w" | sed 's|[][]|\\&|g')" | sed 's/.*# //')

mpvc "$w"

