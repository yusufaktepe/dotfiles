#!/bin/sh
# This file originally taken from:
# https://github.com/LukeSmithxyz/voidrice

# Give dmenu list of all unicode characters to copy.
# Shows the selected character in dunst if running.

emoji_file="$HOME/.config/emoji"
fa_file="$HOME/.config/fontawesome"

# Must have xclip installed to even show menu.
xclip -h >/dev/null || exit

if [ -e "$fa_file" ]; then
	chosen=$(grep -v "#" -h "$emoji_file" "$fa_file" | dmenu -i -l 20 -fn Monospace-18)
else
	chosen=$(grep -v "#" "$emoji_file" | dmenu -i -l 20 -fn Monospace-18)
fi

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$c" | tr -d '\n' | xclip -selection clipboard
notify-send "'$c' copied to clipboard." &

s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
echo "$s" | tr -d '\n' | xclip
notify-send "'$s' copied to primary." &
