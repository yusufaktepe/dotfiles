#!/usr/bin/env bash

remote=$(git ls-remote --get-url 2>/dev/null) || exit $?

if [[ $remote =~ ^http ]]; then
	url=$remote
elif [[ $remote =~ ^git: ]]; then
	url=https://${remote#*//}
else
	url=${remote##*@}
	url=https://${url/:/\/}
fi

case $1 in
	commit|c)
		Hash=$(git rev-parse HEAD)
		setsid -f xdg-open "$url/commit/$Hash" >/dev/null 2>&1 ;;
	*)
		setsid -f xdg-open "$url" >/dev/null 2>&1
esac

