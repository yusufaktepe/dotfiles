#!/bin/sh

# Increase key speed via a rate change
xset r rate 300 50

# Both Shift enables CapsLock; one disables it (this should come first)
setxkbmap -option caps:none
setxkbmap -option 'shift:both_capslock_cancel'

# Both Ctrl together switches layout
setxkbmap -layout tr,us -option grp:ctrls_toggle

# map Caps_Lock to Hyper_L
xmodmap -e 'clear lock' -e 'remove mod4 = Hyper_L' \
	-e 'add mod3 = Hyper_L' -e 'keycode 66 = Hyper_L'

killall -q xcape

# CapsLock
xcape -e 'Hyper_L=Escape'

Super_L="Escape"
AltGr="XF86Launch9"
Control_R="Super_L|XF86MonBrightnessDown"
Shift_R="Menu"

xcape -t 200 -e "Super_L=$Super_L;ISO_Level3_Shift=$AltGr;Control_R=$Control_R;Shift_R=$Shift_R"

