#!/bin/sh

update_bar() {
	if pgrep -x i3blocks > /dev/null; then
		pkill -RTMIN+10 i3blocks
	elif pgrep -x polybar > /dev/null; then
		polybar-msg hook brightness 1 >/dev/null
	else
		return
	fi
}

case $1 in
	inc) light -A "$2" && update_bar ;;
	dec) light -U "$2" && update_bar ;;
	set) light -S "$2" && update_bar ;;
	off) xset dpms force off ;;
esac
