#!/bin/sh

if [ -n "$*" ]; then
	if [ "$1" = . ]; then
		cmd="tabnew | cd \"$PWD\""
	else
		cmd="tabnew | cd \"$*\""
	fi
else
	cmd=redraw
fi

if [ -n "$(vifm --server-list)" ]; then
	vifm --server-name vifm --remote -c "$cmd"
else
	if [ -t 2 ]; then
		xdotool getactivewindow set_window --classname vifm &
		vifm -c "$cmd"
	else
		$TERMINS Alacritty,vifm -e sh -c "vifm -c '$cmd'; zsh" >/dev/null 2>&1 &
	fi
fi

