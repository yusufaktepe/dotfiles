#!/bin/sh

AW=$(xdotool getactivewindow)
AW_CLASS=$(xprop -id "$AW" | awk -F'"' '/WM_CLASS/ {print $4}')

if pidof -q cantata; then
	if [ "$AW_CLASS" = "cantata" ]; then
		i3-msg "workspace back_and_forth" >/dev/null
	else
		i3-msg '[class="cantata"] focus' >/dev/null
	fi
else
	if pidof -q mpd; then
		cantata
	else
		mpd; sleep .4; cantata
		wait
		mpd --kill
	fi
fi

