#!/bin/sh
# work in progress :)

case "$1" in
	banner)
		xdotool key --clearmodifiers numbersign key --repeat 69 equal \
		key --repeat 2 Return numbersign key --repeat 69 equal key Up+space
	;;
	banner2)
		xdotool key --clearmodifiers slash asterisk key --repeat 68 asterisk \
		key --repeat 2 Return key --repeat 69 asterisk key slash Up
	;;
	mail)
		xdotool type --clearmodifiers 'yusuf@yusufaktepe.com'
	;;
	mail2)
		xdotool type --clearmodifiers 'yusufaktepe@gmail.com'
	;;
	mdcode)
		xdotool key --repeat 3 grave key --repeat 2 Return key --repeat 3 grave key Up
	;;
	shrug)
		xdotool type --clearmodifiers '¯\_(ツ)_/¯'
	;;
esac
