#!/bin/sh

notify() {
	vol=$(pamixer --get-volume-human | tr -d '%')

	if [ "$vol" = muted ]; then
		icon="audio-volume-muted"
	elif [ "$vol" -ge 70 ]; then
		icon="audio-volume-high"
	elif [ "$vol" -ge 40 ]; then
		icon="audio-volume-medium"
	elif [ "$vol" -gt 0 ]; then
		icon="audio-volume-low"
	else
		icon="audio-volume-low"
	fi

	dunstify \
		-a volume \
		-i "$icon" \
		-t 1500 \
		-h int:value:0 \
		-h string:synchronous:volume \
		-r 1000 \
		"Volume: $vol" "<b>$(getprogress -p "$vol")</b>"
}

case $1 in
	u*|i*) pamixer -i "${2:-10}"; notify ;;
	d*) pamixer -d "${2:-10}"; notify ;;
	t*) pamixer -t; notify ;;
	s*) pamixer --set-volume "$2"; notify ;;
	g*|"") pamixer --get-volume-human ;;
esac

