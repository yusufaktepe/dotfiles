#!/bin/sh

AW=$(xdotool getactivewindow)
AW_INS=$(xprop -id "$AW" | awk -F'"' '/WM_CLASS/{print $2}')

while getopts ":e:i:hst" opt; do
	case $opt in
		e) Exec=$OPTARG ;;
		i) Ins=$OPTARG ;;
		s) Scratchpad=true ;;
		t) Toggle=true ;;
		h) Hold=true ;;
		*) printf '%s\n' "Incorrect option(s) specified."; exit 1 ;;
	esac
done
shift $((OPTIND-1))

[ -z "$Exec" ] && exit 1
[ -z "$Ins" ] && Ins=$Exec

if wmctrl -lx | grep -iq "$Ins.*$TERMINAL"; then
	if [ "$AW_INS" = "$Ins" ]; then
		if [ "$Scratchpad" ]; then
			i3-msg -q "[instance=\"(?i)$Ins\"] move scratchpad"
		elif [ "$Toggle" ]; then
			i3-msg -q kill
			# wmctrl -c :ACTIVE:
		else
			i3-msg -q 'workspace back_and_forth'
		fi
	else
		i3-msg -q "[instance=\"(?i)$Ins\"] focus"
	fi
else
	[ $Hold ] && Exec="$Exec; $SHELL"
	$TERMINS "$Ins" -e sh -c "$Exec" >/dev/null 2>&1 &
fi

