[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
; interval = 5

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage:3%%
label-volume-foreground = ${root.foreground}

format-volume-underline = ${colors.magenta}
format-muted-underline = ${colors.darkmagenta}

label-muted = %{T6}%{T-} muted
label-muted-foreground = ${colors.darkgrey}

bar-volume-width = 8
bar-volume-foreground-0 = ${colors.blue}
bar-volume-foreground-1 = ${colors.blue}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.darkgrey}

ramp-volume-0 = %{T6}%{T-}
ramp-volume-1 = %{T6}%{T-}
ramp-volume-2 = %{T6}%{T-}
ramp-volume-3 = %{T6}%{T-}
ramp-volume-4 = %{T6}%{T-}
ramp-volume-5 = %{T6}%{T-}
ramp-volume-6 = %{T6}%{T-}
ramp-volume-7 = %{T6}%{T-}
ramp-volume-8 = %{T6}%{T-}
ramp-volume-9 = %{T6}%{T-}
ramp-volume-10 = %{T6}%{T-}

ramp-volume-foreground = ${colors.icon}

click-right = killall pavucontrol || pavucontrol &
click-middle = $TERMINAL_N _blockterm -e pulsemixer &

