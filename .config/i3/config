	bindsym $mod+Shift+f mode default
}

# Open link with X
bindsym $caps+b mode "$broopen"
set $broopen ÔÜî: F3/3 | Ôâ™: F4/4 | Ôâ©: F5/5 | Ôâ®: F6/6 | Ô®©: t | ÔÖ™: y/c | ÔÑµ: d
mode "$broopen" {
	bindsym --release F3 exec $N bro-open $BROWSER, mode default
	bindsym --release F4 exec $N bro-open opera --start-maximized, mode default
	bindsym --release F5 exec $N bro-open firefox, mode default
	bindsym --release F6 exec $N bro-open google-chrome-stable, mode default
	bindsym --release 3 exec $N bro-open $BROWSER --incognito, mode default
	bindsym --release 4 exec $N bro-open opera -private --start-maximized, mode default
	bindsym --release 5 exec $N bro-open firefox --private-window, mode default
	bindsym --release 6 exec $N bro-open google-chrome-stable --incognito, mode default
	bindsym --release t exec $N bro-open tor-browser --allow-remote, mode default
	bindsym --release y exec $N bro-open mpv, mode default
	bindsym --release c exec $N bro-open mpv -c, mode default
	bindsym --release d exec $N bro-open dmenuhandler, mode default

	bindsym Return mode default
	bindsym Escape mode default
	bindsym $caps+b mode default
}

bindsym $mod+Shift+t mode "$toggle"
set $toggle ÔàÖ pi[c]om [r]edshift [s]timeout [t]ransmission [S]yncthing | ÔÄû pi[C]om [d]unst [p]ulse
mode "$toggle" {
	bindsym c exec $N pkill picom || picom -b, mode default
	bindsym r exec $N toggle redshift, mode default
	bindsym s exec $N toggle stimeout, mode default
	bindsym t exec $N toggle transmission, mode default
	bindsym Shift+s exec $N toggle syncthing, mode default
	bindsym Shift+c exec $N "pkill picom; sleep .4; picom -b", mode default
	bindsym --release d exec "pkill dunst; exec notify-send -a system 'restart dunst'", mode default
	bindsym p exec $N systemctl --user restart pulseaudio, mode default

	bindsym Return mode default
	bindsym Escape mode default
}

bindsym $caps+a mode "$keystroke"
set $keystroke üî§
mode "$keystroke" {
	bindsym --release q exec $N autotype mail, mode default
	bindsym --release g exec $N autotype mail2, mode default
	bindsym --release minus exec $N autotype banner, mode default
	bindsym --release asterisk exec $N autotype banner2, mode default
	bindsym --release comma exec $N autotype mdcode, mode default
	bindsym --release 0 exec $N autotype shrug, mode default

	bindsym Escape mode default
	bindsym $caps+a mode default
}

bindsym $caps+w mode "$vimwiki"
set $vimwiki Óò´
mode "$vimwiki" {
	bindsym w exec $N $TERMINAL -e $EDITOR -c 'VimwikiIndex', mode default
	bindsym t exec $N $TERMINAL -e $EDITOR +$ ~/notes/todo.md, mode default

	bindsym Escape mode default
	bindsym $caps+w mode default
}

bindsym $caps+p mode "$paste"
set $paste ÔÉ™
mode "$paste" {
	bindsym 1 exec $N gclip 1, mode default
	bindsym 2 exec $N gclip 2, mode default
	bindsym 3 exec $N gclip 3, mode default
	bindsym 4 exec $N gclip 4, mode default
	bindsym 5 exec $N gclip 5, mode default
	bindsym p exec $N gclip selpaste, mode default

	bindsym Escape mode default
	bindsym $caps+p mode default
}

